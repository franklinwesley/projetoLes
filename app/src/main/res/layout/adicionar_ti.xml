<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:weightSum="1"
    xmlns:bootstrap="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="110dp"
        android:layout_marginLeft="20dp">
        <com.beardedhen.androidbootstrap.FontAwesomeText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            bootstrap:fa_icon="fa-calendar"
            android:layout_margin="10dp"
            android:textSize="32sp"/>
        <com.beardedhen.androidbootstrap.BootstrapEditText
            android:id="@+id/etxt_todate"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:gravity="center_horizontal"
            android:hint="@string/to_date"
            android:layout_centerHorizontal="true"
            bootstrap:be_roundedCorners="true"
            android:layout_above="@+id/tarefas"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp">
        <com.beardedhen.androidbootstrap.FontAwesomeText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            bootstrap:fa_icon="fa-clock-o"
            android:layout_margin="10dp"
            android:textSize="32sp"/>
        <com.beardedhen.androidbootstrap.BootstrapEditText
            android:id="@+id/etxt_totime"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:gravity="center_horizontal"
            android:hint="@string/to_time"
            android:layout_alignParentTop="true"
            bootstrap:be_roundedCorners="true"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="220dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/linearLayout4">
        <com.beardedhen.androidbootstrap.FontAwesomeText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            bootstrap:fa_icon="fa-tasks"
            android:layout_margin="10dp"
            android:textSize="32sp"/>
        <Spinner
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/prioridade"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@+id/button2"
            android:layout_toEndOf="@+id/button2"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/linearLayout2">
        <com.beardedhen.androidbootstrap.FontAwesomeText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            bootstrap:fa_icon="fa-tasks"
            android:layout_margin="10dp"
            android:textSize="32sp"/>
        <Spinner
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/tarefas"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@+id/button2"
            android:layout_toEndOf="@+id/button2"/>
    </LinearLayout>

    <com.beardedhen.androidbootstrap.BootstrapButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Salvar"
        android:id="@+id/button"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="82dp"
        bootstrap:bb_roundedCorners="true"
        bootstrap:bb_type="success"
        android:layout_marginRight="20dp"
        android:onClick="onBtnClicked"/>

    <com.beardedhen.androidbootstrap.BootstrapButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancelar"
        android:id="@+id/button2"
        android:layout_alignBottom="@+id/button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        bootstrap:bb_roundedCorners="true"
        bootstrap:bb_type="danger"
        android:layout_marginLeft="20dp"/>

</RelativeLayout>
